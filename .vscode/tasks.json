{  
    "version": "0.1.0",  
    "command": "cmd" ,  
    "args": ["/c"],
    "isShellCommand": true, 
    "showOutput": "always",  
    "suppressTaskName": true,
    "echoCommand": true,
    "tasks" : [
        {
            "taskName": "pyflakes",
            "args": ["pyflakes", "${file}"],
            "isBuildCommand": true
        },
        {
            "taskName": "makercc",
            // resource output file 을 .ui 파일에서 사용하려면 _rc 를 붙여줘야 함 
            "args": ["pyrcc5.exe", "resource.qrc", "-o", "resource_rc.py"]
        },
        {
            "taskName": "makeui",
            "args": ["pyuic5.exe", "mainwindow.ui", "-o", "mainwindow_ui.py"],
            "isBuildCommand": true
        } 
    ]
}